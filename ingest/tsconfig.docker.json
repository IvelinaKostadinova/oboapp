{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "rootDir": "./",
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["./shared/*"],
      "zod": ["./node_modules/zod"]
    }
  },
  "include": ["**/*.ts", "**/*.mts", "./shared/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "tmp",
    "**/*.test.ts",
    "**/*.spec.ts",
    "vitest.config.ts",
    "vitest.setup.ts"
  ]
}
